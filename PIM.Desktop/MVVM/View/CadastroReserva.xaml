<Window x:Class="PIM.Desktop.MVVM.View.CadastroReserva"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIM.Desktop.MVVM.View"
        mc:Ignorable="d"
        Title="CadastroReserva" Height="450" Width="800"
        Background="#2C3333">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid
              Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition MaxHeight="25"></RowDefinition>
                <RowDefinition MaxHeight="25"></RowDefinition>
                <RowDefinition MaxHeight="25"></RowDefinition>
                <RowDefinition MaxHeight="25"></RowDefinition>
                <RowDefinition MaxHeight="25"></RowDefinition>
                <RowDefinition MaxHeight="25"></RowDefinition>
                <RowDefinition MaxHeight="25"></RowDefinition>
                <RowDefinition MaxHeight="25"></RowDefinition>
                <RowDefinition MaxHeight="25"></RowDefinition>
                <RowDefinition MaxHeight="25"></RowDefinition>
                <RowDefinition MaxHeight="25"></RowDefinition>
                <RowDefinition MaxHeight="10"></RowDefinition>
                <RowDefinition MaxHeight="25"></RowDefinition>
                <RowDefinition MaxHeight="25"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <Label
                Grid.Column="0"
                Grid.Row="1"
                HorizontalAlignment="Center"
                Foreground="#fff"
                VerticalAlignment="Center"
                >Cliente:</Label>

            <TextBox 
                Grid.Column="1"
                Grid.Row="1"
                Padding="5, 3, 0, 0"
                Background="Transparent"
                Foreground="AliceBlue"
             />
            <Label
                Grid.Column="3"
                Grid.Row="1"
                HorizontalAlignment="Center"
                Foreground="#fff"
                VerticalAlignment="Center"
                >RG:</Label>

            <TextBox 
                Grid.Column="4"
                Grid.Row="1"
                Padding="5, 3, 0, 0"
                Width="150"
                HorizontalAlignment="Left"
                Background="Transparent"
                Foreground="AliceBlue"
             />
            <Label
                Grid.Column="0"
                Grid.Row="3"
                HorizontalAlignment="Center"
                Foreground="#fff"
                VerticalAlignment="Center"
                >CPF:</Label>


            <Label
            Grid.Column="3"
            Grid.Row="3"
            VerticalAlignment="Bottom"
            Foreground="White"
            HorizontalAlignment="Center"
            >Celular:</Label>

            <TextBox
            Grid.Column="4"
            Grid.Row="3"
            Background="Transparent"
            Foreground="White"
        />

            <TextBox 
                Grid.Column="1"
                Grid.Row="3"
                Padding="5, 3, 0, 0"
                Width="150"
                HorizontalAlignment="Left"
                Background="Transparent"
                Foreground="AliceBlue"
             />
            <Label
                Grid.Column="0"
                Grid.Row="5"
                HorizontalAlignment="Center"
                Foreground="#fff"
                VerticalAlignment="Center"
             >Tipo de quarto:</Label>

            <ComboBox
                Grid.Column="1"
                Grid.Row="5"
                MaxWidth="200"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">

                <ComboBoxItem IsSelected="True">Luxo</ComboBoxItem>
                <ComboBoxItem>Simples</ComboBoxItem>
                <ComboBoxItem>Casal</ComboBoxItem>
            </ComboBox>


            <Label
                Grid.Column="3"
                Grid.Row="5"
                HorizontalAlignment="Center"
                Foreground="#fff"
                VerticalAlignment="Center"
             >Quarto:</Label>

            <ComboBox
                Grid.Column="4"
                Grid.Row="5"
                MaxWidth="200"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">

                <ComboBoxItem IsSelected="True">100</ComboBoxItem>
                <ComboBoxItem>110</ComboBoxItem>
                <ComboBoxItem>120</ComboBoxItem>
            </ComboBox>


            <Label
                Grid.Column="0"
                Grid.Row="7"
                Foreground="#fff"
                HorizontalAlignment="Center"
                >
                Check-In:
            </Label>

            <DatePicker
                Grid.Row="7"
                Grid.Column="1"
                MaxWidth="150"
                HorizontalAlignment="Left"
            ></DatePicker>

            <Label
                Grid.Column="3"
                Grid.Row="7"
                Foreground="#fff"
                HorizontalAlignment="Center"
                >
                Check-Out:
            </Label>

            <DatePicker
                Grid.Row="7"
                Grid.Column="4"
                MaxWidth="150"
                HorizontalAlignment="Left"
            ></DatePicker>

            <Label
                Grid.Column="3"
                Grid.Row="10"
                Foreground="#fff"
                HorizontalAlignment="Center"
                >
                Valor:
            </Label>
            <TextBox 
                Grid.Column="4"
                Grid.Row="10"
                Padding="5, 3, 0, 0"
                Width="150"
                Text="R$ "
                HorizontalAlignment="Left"
                Background="Transparent"
                Foreground="AliceBlue"
             />
            <Button
            Grid.Column="3"
            Grid.Row="15"
            Margin="50 0"
        >Editar</Button>

            <Button
            Grid.Column="4"
            Grid.Row="15"
            Margin="50 0"
        >Salvar</Button>
        </Grid>
    </Grid>
</Window>
