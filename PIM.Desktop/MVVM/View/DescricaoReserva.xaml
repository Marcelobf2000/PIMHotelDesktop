<Window x:Class="PIM.Desktop.MVVM.View.DescricaoReserva"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIM.Desktop.MVVM.View"
        mc:Ignorable="d"
        Title="DescricaoReserva" Height="450" Width="800"
        Background="#2C3333">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="25" MaxHeight="50"/>
            <RowDefinition Height="40" MaxHeight="45"/>
            <RowDefinition Height="25" MaxHeight="35"/>
            <RowDefinition Height="25" MaxHeight="35"/>
            <RowDefinition Height="25" MaxHeight="35"/>
            <RowDefinition Height="25" MaxHeight="35"/>
            <RowDefinition Height="25" MaxHeight="35"/>
            <RowDefinition Height="25" MaxHeight="35"/>
            <RowDefinition Height="25" MaxHeight="35"/>
            <RowDefinition Height="25" MaxHeight="35"/>
            <RowDefinition Height="25" MaxHeight="35"/>
            <RowDefinition Height="25" MaxHeight="35"/>
            <RowDefinition Height="25" MaxHeight="35"/>
            <RowDefinition Height="25" MaxHeight="35"/>
            <RowDefinition Height="25" MaxHeight="35"/>
            <RowDefinition Height="25" MaxHeight="35"/>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>

        <!-- Informações Pessoais -->
        <Label
            Grid.Column="3"
            Grid.ColumnSpan="2"
            Grid.Row="1"
            Foreground="White"
            FontSize="20"
            FontWeight="Bold"
            HorizontalAlignment="Center" Margin="30,0,110,0" Width="210"
        >Informações Reserva:</Label>

        <!-- Nome -->
        <Label
            Grid.Column="1"
            Grid.Row="2"
            VerticalAlignment="Bottom"
            Foreground="White" Height="25"
        >Hospede:</Label>
        <TextBlock
            Grid.Column="1"
            Grid.Row="3"
            Grid.ColumnSpan="3"
            Background="Transparent"
            Foreground="White"
        />



        <!-- RG -->
        <Label
            Grid.Column="1"
            Grid.Row="4"
            VerticalAlignment="Bottom"
            Foreground="White" Height="25"
        >RG:</Label>
        <TextBlock
            Grid.Column="1"
            Grid.Row="5"
            Background="Transparent"
            Foreground="White"
        />

        <!-- CPF -->
        <Label
            Grid.Column="3"
            Grid.Row="2"
            VerticalAlignment="Bottom"
            Foreground="White" Height="25"
        >CPF:</Label>
        <TextBlock
            Grid.Column="3"
            Grid.Row="3"
            Background="Transparent"
            Foreground="White"
        />

        <!-- Email -->
        <Label
            Grid.Column="3"
            Grid.Row="4"
            VerticalAlignment="Bottom"
            Foreground="White" Height="25"
        >E-mail:</Label>
        <TextBlock
            Grid.Column="3"
            Grid.Row="5"
            Grid.ColumnSpan="3"
            Background="Transparent"
            Foreground="White"
        />

        <!-- Telefone -->
        <Label
            Grid.Column="1"
            Grid.Row="6"
            VerticalAlignment="Bottom"
            Foreground="White" Height="25"
        >Telefone:</Label>
        <TextBlock
            Grid.Column="1"
            Grid.Row="7"
            Background="Transparent"
            Foreground="White"
        />

        <!-- Celular -->
        <Label
            Grid.Column="3"
            Grid.Row="6"
            VerticalAlignment="Bottom"
            Foreground="White" Height="25"
        >Celular:</Label>
        <TextBox
            Grid.Column="3"
            Grid.Row="7"
            Background="Transparent"
            Foreground="White"
        />

        <!-- Endereço -->
        <Label
            Grid.Column="1"
            Grid.Row="8"
            VerticalAlignment="Bottom"
            Foreground="White" Height="25"
        >Endereço:</Label>
        <TextBox
            Grid.Column="1"
            Grid.Row="9"

            Background="Transparent"
            Foreground="White"
        />

        <!-- Numero -->
        <Label
            Grid.Column="3"
            Grid.Row="8"
            VerticalAlignment="Bottom"
            Foreground="White" Height="25"
        >N°:</Label>
        <TextBox
            Grid.Column="3"
            Grid.Row="9"
            Margin="0 0 100 0"
            Background="Transparent"
            Foreground="White"
        />

        <!-- Bairro -->
        <Label
            Grid.Column="1"
            Grid.Row="10"
            VerticalAlignment="Bottom"
            Foreground="White"
            Grid.ColumnSpan="2" Height="25"
        >Bairro:</Label>
        <TextBox
            Grid.Column="1"
            Grid.Row="11"
            Background="Transparent"
            Foreground="White"
        />

        <!-- CEP -->
        <Label
            Grid.Column="3"
            Grid.Row="10"
            VerticalAlignment="Bottom"
            Foreground="White"
            Grid.ColumnSpan="2" Height="25"
        >CEP:</Label>
        <TextBox
            Grid.Column="3"
            Grid.Row="11"
            Background="Transparent"
            Foreground="White"
        />

        <!--Informação Quarto-->

        <Label
                Grid.Column="4"
                Grid.Row="2"
                HorizontalAlignment="Center"
                Foreground="#fff"
                VerticalAlignment="Center" Height="25" Margin="30,0" Width="90"
             >Tipo de quarto:</Label>

        <ComboBox
                Grid.Column="5"
                Grid.Row="2"
                MaxWidth="200"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" Height="22" Margin="0,1,0,2" Width="53">

            <ComboBoxItem IsSelected="True">Luxo</ComboBoxItem>
            <ComboBoxItem>Simples</ComboBoxItem>
            <ComboBoxItem>Casal</ComboBoxItem>
        </ComboBox>


        <Label
                Grid.Column="4"
                Grid.Row="4"
                HorizontalAlignment="Center"
                Foreground="#fff"
                VerticalAlignment="Center" Height="25" Margin="50,0" Width="50"
             >Quarto:</Label>

        <ComboBox
                Grid.Column="5"
                Grid.Row="4"
                MaxWidth="200"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" Height="22" Margin="0,1,0,2" Width="47">

            <ComboBoxItem IsSelected="True">100</ComboBoxItem>
            <ComboBoxItem>110</ComboBoxItem>
            <ComboBoxItem>120</ComboBoxItem>
        </ComboBox>

        <Label
                Grid.Column="4"
                Grid.Row="6"
                Foreground="#fff"
                HorizontalAlignment="Center" Margin="48,0" Width="54"
                >
            Entrada:
        </Label>

        <DatePicker
                Grid.Column="5"
                Grid.Row="6"
                MaxWidth="150"
                HorizontalAlignment="Center" Margin="6,0" Width="138"
            />

        <Label
                Grid.Column="4"
                Grid.Row="8"
                Foreground="#fff"
                HorizontalAlignment="Center" Margin="54,0" Width="42"
                >
            Saída:
        </Label>

        <DatePicker
                Grid.Column="5"
                Grid.Row="8"
                MaxWidth="150"
                HorizontalAlignment="Center" Margin="6,0" Width="138"
            />

        <Button
            Grid.Column="1"
            Grid.Row="15"
            Margin="50 0"
        >Editar</Button>

        <Button
            Grid.Column="3"
            Grid.Row="15"
            Margin="50 0"
        >Salvar</Button>

        <Button
            Grid.Column="4"
            Grid.Row="15"
            Margin="30 0"
        >Fechar Reserva</Button>

    </Grid>

</Window>
